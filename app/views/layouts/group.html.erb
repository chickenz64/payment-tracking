<!DOCTYPE html>
<html>
<head>
  <title><%= t('microlend') %> - <%= t('groups.groups') %></title>
  <%= stylesheet_link_tag    "bootstrap.min"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= stylesheet_link_tag    "font-awesome.min"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= stylesheet_link_tag    "home"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container groups">
    <%= render 'shared/nav' %>

    <div class="row">
      <div class="span12">
        <h3 id="title"><%= link_to 'Home', root_path %>
          <i class="icon-double-angle-right"></i> <%= link_to t('groups.groups'), groups_path %>
          <i class="icon-double-angle-right"></i> <%= @header %></h3>
      </div>
    </div>

    <div class="row">
      <div class="span3">
        <div class="transparent menu">
          <ul class="nav nav-list">
            <li class="nav-header"><%= t('groups.groups') %></li>
              <% @groups.each do |group| %>
                <li class="<%= 'active' if current_page?(group_path(group)) %>">
                  <%= link_to group.name, group_path(group) %>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
      
      <div class="span9">
        <%= content_for?(:page_body) ? yield(:page_body) : yield %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </div>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "common" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= javascript_include_tag "groups" %>
  <%= javascript_include_tag "flotr2.min" %>
</body>
</html>