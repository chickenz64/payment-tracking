<!DOCTYPE html>
<html>
<head>
  <title><%= t('microlend') %> - <%= t('clients.clients') %></title>
  <%= stylesheet_link_tag    "bootstrap.min"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= stylesheet_link_tag    "font-awesome.min"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= stylesheet_link_tag    "home"+(I18n.locale.to_s == "ar" ? "-rtl" : "") %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'shared/nav' %>
  <div class="container clients">

    <div class="row">
      <div class="span12">
        <h3 id="title"><%= link_to 'Home', root_path %>
          <i class="icon-double-angle-right"></i> <%= link_to  t('clients.clients'), clients_path %>
          <i class="icon-double-angle-right"></i> <%= @header %></h3>
      </div>
    </div>

    <div class="row">
      <div class="span3"><%= render 'shared/clients_nav' %></div>
      <div class="span9">
        <div id="form_msgs">
          <%= render 'shared/form_messages', target:@client if @client %>
          <%= render 'shared/form_messages', target:@plan.product if @plan %>
          <%= render 'shared/form_messages', target:@payment if @payment %>
        </div>
        <div id="flash_msgs"><%= render 'shared/flash_messages' %></div>
        <%= content_for?(:page_body) ? yield(:page_body) : yield %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </div>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "common" %>
  <%= javascript_include_tag "bootstrap.min" %>
</body>
</html>