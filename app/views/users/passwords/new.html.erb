<div class="row">
  <%= form_for(resource, as:resource_name, url:password_path(resource_name), 
  html:{method: :post, id:"form", class:"offset4 span4"}) do |f| %>

    <h3>Forgot your password?</h3>
    <%= render 'shared/form_messages', target:resource %>
      <div><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class:"span4" %></div>

      <div class="center"><%= f.submit "Send me instructions", class:'btn' %></div>
  <% end %>
</div>

<div class="row">
  <div class="offset4 span4 shared-users">
    <ul class="inline center">
      <li><%= link_to "Sign up", new_registration_path(resource_name) %></li>
      <li>&bull;</li>
      <li><%= link_to "Sign in", new_session_path(resource_name) %></li>
    </ul>
  </div>
</div>