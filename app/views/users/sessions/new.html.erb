<div class="row">
  <%= form_for(resource, as:resource_name, url:session_path(resource_name), 
html:{id:"form", class:"offset3 span6 form-inline"}) do |f| %>

    <h2 class="center">Login</h2>
    <%= render 'shared/form_messages', target:resource %>
    <%= render 'shared/flash_messages', target:resource %>

      <div>
      <%= f.email_field :email, :autofocus => true, class:"span4", placeholder:"Email"  %></div>

      <div>
      <%= f.password_field :password, class:"span4", placeholder:"Password"  %></div>


      <%# if devise_mapping.rememberable? -%>
        <!-- <div class="span4" > -->
          <!-- <label class="checkbox"> -->
            <%#= f.check_box :remember_me %> <%#= f.label :remember_me %>
          <!-- </label> -->
        <!-- </div> -->
      <%# end -%>

      <div class="center"><%= f.submit "Login", class:'btn btn-large' %></div>
  <% end %>
</div>

