<div class="row">
<%= form_for(resource, as: resource_name, url:registration_path(resource_name), 
html:{id:"form", class:"offset2 span8 form-inline"}) do |f| %>
  
  <h2 class="center">Edit <%= resource_name.to_s.humanize %></h2>
  <%= render 'shared/form_messages', target:resource %>
  <%#= devise_error_messages! %>

  <div><span class="mylabel">Email</span>
  <%= f.email_field :email, :autofocus => true, class:"span4" %></div>

  <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <!-- <div>Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div> -->
  <%# end %>

  <div><span class="mylabel">Password</span>
  <%= f.password_field :password, :autocomplete => "off", class:"span4" %><br/>
  <small>(leave blank if you don't want to change it)</small></div>

  <div><span class="mylabel">Re-enter Password</span>
  <%= f.password_field :password_confirmation, :autocomplete => "off", class:"span4"  %></div>

  <div><span class="mylabel">Password</span>
    <%= f.password_field :current_password, class:"span4"  %><br>
    <small>(we need your current password to confirm your changes)</small></div>

  <div class="center"><%= f.submit "Update", class:'btn btn-large' %></div>
<% end %>

<!-- <h3>Cancel my account</h3> -->

<!-- <p>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p> -->

<%#= link_to "Back", :back %>
</div>
