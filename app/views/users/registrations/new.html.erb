<div class="row">
<%= form_for(resource, as:resource_name, url:registration_path(resource_name), 
html:{id:"form", class:"offset2 span8 form-inline"}) do |f| %>

  <h2 class="center">Sign up</h2>
    <%= render 'shared/form_messages', target:resource %>
    <div><span class="mylabel">Name</span>
    <%= f.text_field :name, class:"span4" %></div>

    <div><span class="mylabel">Email</span>
    <%= f.email_field :email, class:"span4" %></div>

    <div><span class="mylabel">Password</span>
    <%= f.password_field :password, class:"span4" %></div>

    <div><span class="mylabel">Re-enter Password</span>
    <%= f.password_field :password_confirmation, class:"span4" %></div>

    <div class="center"><%= f.submit "Sign up", class:'btn btn-large' %></div>
<% end %>
</div>
